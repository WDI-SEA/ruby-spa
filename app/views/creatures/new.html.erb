
<div class="col-md-offset-2 col-md-10">

  <h1>Record Your Find!</h1>


  <%= form_for @creature do |c| %>
    
    <div>
      <%= c.label :species %>
      <%= c.text_field :species %>
    </div>

    <div>
      <%= c.label :location %>
      <%= c.text_area :location %>
    </div>

    <div>
      <%= c.label :description %>
      <%= c.text_area :description %>
    </div>

    <div>
      <%= c.collection_check_boxes :tag_ids, @tags, :id, :name %>
    </div>
    <%= c.submit %>
    
  <% end %>
</div>